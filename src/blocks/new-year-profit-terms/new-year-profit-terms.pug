mixin new-year-profit-terms(mods)
  -
    const baseName = 'new-year-profit-terms'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .new-year-profit-terms(class=allMods)&attributes(attributes)
    .new-year-profit-terms__icon
      img(src='img/svgs/cash_terms_icon.svg', alt='')
    .knew-year-profit-terms__text
      span А также начислим <span class="new-year-profit-terms__text-bold">5% кэшбэк за все покупки</span>
      +ui-tooltip('text')
      br
      span по карте «Универсальная» за указанный период
    +ui-button('Подробнее', 'new-year-profit-terms')(href='#')
